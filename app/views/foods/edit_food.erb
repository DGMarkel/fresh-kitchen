<style>

  body {
    background-image: url("/photos/apricot_wallpaper.jpg");
    background-size: cover;
  }

</style>

<div class="editFood">

  <h1>Update details for <%= @food.name %></h1>

  <form action="/users/<%= params[:user_slug] %>/<%= params[:category] %>/<%= params[:food] %>" method="post">

    <label>Name: </label><input type="text" name="update[name]" value="<%= @food.name %>">

    <p></p>

    <label>Quantity: </label><input type="text" name="update[quantity]" value="<%= @food.quantity %>">

    <p></p>

    <label>Expiration Date: </label><input type="text" name="update[expiration_date]" value="<%= @food.expiration_date %>">

    <p></p>

    <label>Select a Category: </label>

      <% if !current_user.categories.empty? %>
        <% current_user.categories.each do |category| %>
        <input type="radio" name="update[category_id]" value="<%= category.id %>"><label><%= category.name %></label>
        <% end %>
      <% end %>

    <p></p>

    <label>Add a New Category: </label><input type="text" name="new[category]">

    <p></p>

    <input type="submit" name="Submit">

  </form>

</div>
